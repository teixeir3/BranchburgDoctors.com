<%= simple_form_for @download, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :position %>
  <%= f.input :display %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                downloads_path, :class => 'btn' %>
  </div>
<% end %>
