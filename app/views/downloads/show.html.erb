<%- model_class = Download -%>

<div class="page-header">
  <h1><%=t '.title', :default => @download.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @download.title %></dd>
  <% if current_user_is_admin? %>
    <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
    <dd><%= @download.position %></dd>
    <dt><strong><%= model_class.human_attribute_name(:display) %>:</strong></dt>
    <dd><%= @download.display %></dd>
  <% end %>
</dl>

<% if current_user_is_admin? %>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                downloads_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_download_path(@download), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                download_path(@download),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
<% end %>