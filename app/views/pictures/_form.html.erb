<% simple_form_for(@picture) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= simple_form_for @picture, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :position %>
  <%= f.input :display %>
  
  <span class="btn btn-primary btn-file">
      Browse <%= f.input :image, type: "file", id: "photo" %>
  </span>
  
  <span class="btn btn-default btn-file">
      Browse <input type="file">
  </span>
  
 
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                downloads_path, :class => 'btn' %>
  </div>
<% end %>

