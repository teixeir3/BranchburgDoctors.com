<header class="header navbar-static-top">
  <nav id="logo-nav" class="logo navbar navbar-default">
    <div class="container">
      <figure id="logo" class="logo">
        <a href="<%= root_url %>">
          <img class="site-logo" src="<%= image_url("sbfp_logo_no_url_300x235.png") %>" alt="South Branch Family Practice">
        </a>
        <figcaption id="site-slogan">Family Care Practicioners</figcaption>
      </figure>
    </div>
  </nav>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid nav-container">

      <div class="navbar-header">
        <a class="navbar-brand navbar-brand-small" href="<%= root_url %>"><%= image_tag("sbfp_logo_no_url_90x74.png", alt: "South Branch Family Practice") %></a>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      
      <div class="main-nav collapse navbar-collapse" id="navbar-collapse-1">
        <ul class="nav navbar-nav">
          <a class="navbar-brand navbar-brand-big" href="<%= root_url %>"><%= image_tag("sbfp_logo_no_url_90x74.png", alt: "South Branch Family Practice") %></a>
          <li><a href="<%= root_path %>">Home</a></li>  
        </ul>
        
        <ul class="nav navbar-nav navbar-right">
          <li class="active"><a href="#">Patient Portal <span class="sr-only">(current)</span></a></li>
          <li><a href="<%= "#" %>">Patient Resources</a></li>
          <li><a href="<%= "#" %>">Physicians</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Services <span class="caret"></span></a>
            <ul class="pull-right dropdown-menu inverse-dropdown" role="menu">
              <li><%= link_to "Preventive Medicine", page_path("preventive_medicine") %></li>
              <li><%= link_to "Surgery", page_path("surgery") %></li>
              <li><%= link_to "Blood Draw", page_path("blood_draw") %></li>
